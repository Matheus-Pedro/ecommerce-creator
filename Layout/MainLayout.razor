@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        E-commerce
        <MudSpacer />
        @if (numberOfCartItems >= 1)
        {
            <MudBadge Origin="Origin.BottomLeft" Content="@numberOfCartItems" Color="Color.Secondary" Overlap="true"
                Bordered="false" Class="mx-6 my-4">
                <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.ShoppingCart" DropShadow="true" Class="" />
            </MudBadge>
        }
        else
        {
            <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.ShoppingCart" DropShadow="true" Class="" />
        }

    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink Href="/products" Match="NavLinkMatch.Prefix">Produtos</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    public int numberOfCartItems { get; set; }
    
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
